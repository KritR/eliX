{
  "manifest_version": 3,
  "name": "eliX",
  "description": "Content explanations curated for you!",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "elix_logo.png"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
